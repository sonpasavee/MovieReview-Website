<header class="bg-black text-white shadow">
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Logo / Title -->
    <h1 class="flex items-center text-xl sm:text-2xl font-extrabold tracking-wide">
      R-MOVIE
      <img src="/images/logo.jpg" alt="Logo" class="ml-1 w-8 h-8">
    </h1>

    <!-- Menu + User -->
    <div class="flex items-center gap-6">
      <!-- เมนูหลัก -->
      <nav class="hidden sm:flex gap-4 font-medium">
        <a href="/" class="hover:text-red-500 transition">หน้าแรก</a>
        <a href="/searchResults" class="hover:text-red-500 transition">ค้นหา</a>
        <a href="/collection" class="hover:text-red-500 transition">คอลเล็กชัน</a>
      </nav>

      <!-- User -->
      <div class="flex items-center gap-3">
        <% if (loggedIn) { %>
          <span class="hidden sm:inline font-medium">
            สวัสดี, <%= (typeof UserData !=='undefined' && UserData && UserData.name) ? UserData.name : 'ผู้ใช้' %>
          </span>
          <a href="/logout" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition shadow">
            ออกจากระบบ
          </a>
          <% } else { %>
            <a href="/login" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition shadow">
              เข้าสู่ระบบ
            </a>
            <% } %>
      </div>
</header>