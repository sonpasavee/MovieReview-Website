<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= movie?.title || 'Admin • Reviews' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-b from-[#1a0000] via-[#0b0b0b] to-black text-zinc-100 flex flex-col">
  <div class="w-full bg-black/80 border-b border-red-900/40">
    <div class="max-w-6xl mx-auto px-4 py-3">
      <div class="text-lg font-semibold tracking-wide">R-MOVIE • Admin</div>
    </div>
  </div>

  <main class="flex-1 w-full">
    <div class="max-w-6xl mx-auto px-4 py-8">
      <div class="rounded-2xl border border-red-900/40 bg-black/70 shadow-xl overflow-hidden">

        <!-- ปุ่มสลับ -->
        <div class="px-4 pt-4">
          <div class="inline-flex rounded-md border border-red-900/60 bg-black/40 p-1">
            <a href="/admin/movie/<%= movie?.movieId || movie?.id %>/detail"
               class="px-4 py-2 text-sm rounded-md hover:bg-white/5 transition">Detail</a>
            <a href="/admin/movie/<%= movie?.movieId || movie?.id %>/reviews"
               class="px-4 py-2 text-sm rounded-md bg-red-900/30 ring-1 ring-red-800/60">Reviews</a>
          </div>
        </div>

        <!-- รายการรีวิว -->
        <div class="p-4 md:p-6 space-y-6">
          <% if (Array.isArray(reviews) && reviews.length) { %>
            <div class="divide-y divide-zinc-800/80 border-y border-zinc-800/80">
              <% reviews.forEach(r => { %>
                <article class="py-4">
                  <div class="flex items-start justify-between gap-4">
                    <div class="min-w-0">
                      <div class="text-sm font-semibold"><%= r.name || 'user' %> ให้คะแนน: <%= r.rating %>/10</div>
                      <% if (r.comment) { %>
                        <div class="mt-1 text-sm text-zinc-300 break-words"><%= r.comment %></div>
                      <% } %>
                      <div class="mt-2 text-xs text-zinc-500">
                        <%= new Date(r.createdAt || Date.now()).toDateString() %>
                      </div>
                    </div>
                    <form method="POST" action="/admin/reviews/<%= r._id %>/delete"
                          onsubmit="return confirm('ต้องการลบรีวิวนี้หรือไม่?');" class="shrink-0">
                      <input type="hidden" name="movieId" value="<%= movie?.movieId || movie?.id %>">
                      <button type="submit" class="px-3 py-1 text-xs font-medium rounded-md bg-red-700 hover:bg-red-600 border border-red-500">ลบ</button>
                    </form>
                  </div>
                </article>
              <% }) %>
            </div>
          <% } else { %>
            <div class="rounded-xl border border-zinc-800 bg-zinc-900/60 p-6 text-center text-zinc-300">
              ยังไม่มีรีวิวสำหรับเรื่องนี้
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
